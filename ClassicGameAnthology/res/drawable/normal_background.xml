<?xml version="1.0" encoding="utf-8"?>

<shape 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:shape="oval"
    >
    
    <gradient
		android:type="linear"
		android:centerX="0%"
		android:startColor="#FFff0000"
		android:centerColor="#CCffff00"
		android:endColor="#9900ff00"
		android:angle="45"
		/>
    
    <gradient
		android:type="radial"
		android:centerX="50%"
		android:centerY="50%"
		android:startColor="#00000000"
		android:centerColor="#FF00cccc"
		android:endColor="#00000000"
		android:gradientRadius="500"
		android:innerRadiusRatio="5"
		android:thicknessRatio="25"
		android:width="400dp"
		/>

</shape>
